@model ClimbingApplication.Models.FelhasznaloEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Felhasznalok</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Vezetéknév</label>
                <input asp-for="vezetekNev" />
            </div>
            <div class="form-group">
                <label>Keresztnév</label>
                <input asp-for="KeresztNev" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="email" />
            </div>
            <div class="form-group">
                <label>Születési idő</label>
                <input asp-for="szuletesiIdo" type="date" />
            </div>
            <div class="form-group">
                <label>Telefonszám</label>
                <input asp-for="telefonszam" />
            </div>
            <div class="form-group">
                <label>Felhasználónév</label>
                <input asp-for="felhasznaloNev" />
            </div>
            <div class="form-group">
                <label>Rang</label>
                <input asp-for="rang" />
            </div>
            <div class="form-group">
                <label>Új jelszó</label>
                <input asp-for="ujJelszo" type="password" class="form-control"/>
                <span asp-validation-for="ujJelszo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
