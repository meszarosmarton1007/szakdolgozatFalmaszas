@model IEnumerable<ClimbingApplication.Models.FalmaszoHelyek>

@{
    ViewData["Title"] = "Index";
}

<h1>Falmászó helyek</h1>

<p>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
    <a asp-action="Create" class="btn btn-primary">Új hely hozzáadása</a>
    }
</p>
<div class="row">
@foreach (var item in Model) {
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-7">
                                <h2 class="card-title mb-3">@Html.DisplayFor(modelItem => item.nev)</h2>

                                <dl class="row">
                                    <dt class="col-sm-3">Ország</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(modelItem => item.orszag)</dd>

                                    <dt class="col-sm-3">Honlap</dt>
                                    <dd class="col-sm-9"><a href="@Html.DisplayFor(modelItem => item.honlap)" target="_blank">A terem weboldala</a></dd>

                                    <dt class="col-sm-3">Leírás</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(modelItem => item.leiras)</dd>

                                    <dt class="col-sm-3">Hozzáadó</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(modelItem => item.Hozzaado.felhasznaloNev)</dd>
                                </dl>
                        </div>
                        <div class="col-md-5">
                            <h5>Cím</h5>
                                <address>@Html.DisplayFor(modelItem => item.cim)</address>
                                <div id="map-@item.ID" class="map-container" style="height:300px; width: 100%; margin-bottom: 15px;">
                                    @{
                                        //Cím URL-kompatibilis formátumra alakítása
                                        var address = item.cim;
                                        var encodedAddress = System.Net.WebUtility.UrlEncode(address);

                                        var mapScr = $"https://maps.google.com/maps?q={encodedAddress}&output=embed";

                                    }

                                    <iframe width="100%"
                                            height="100%"
                                            frameborder="0"
                                            style="border:0"
                                            src="@mapScr"
                                            allowfullscreen>
                                    </iframe>
                                </div>

                        </div>
                    </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Falak" asp-action="Index" asp-route-falmaszoHelyId="@item.ID" class="btn btn-lg">
                                A teremben található falak
                            </a>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info">Részletek</a>


                                @if (User.Identity.IsAuthenticated && (item.FelhasznalokID == int.Parse(User.FindFirstValue("UserId")) || User.IsInRole("admin")))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">Szerkesztés</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Törlés</a>
                                }
                            </div>
                        </div>
                </div>

                    
            </div>

                
        </div>

}
</div>
