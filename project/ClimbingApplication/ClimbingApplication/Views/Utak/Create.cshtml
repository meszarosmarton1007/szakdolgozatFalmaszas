@model ClimbingApplication.Models.Utak

@{
    ViewData["Title"] = "Create";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.0/fabric.min.js"></script>
</head>

<h1>Létrehozás</h1>

<h4>Utak</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <button onclick="undo()" id="undoBtn">Visszavonás</button>
        <button onclick="redo()" id="redoBtn">Visszaállítás</button>
        <select id="colorPicker">
            <option value="red">Piros</option>
            <option value="blue">Kék</option>
            <option value="green">Zöld</option>
            <option value="black">Fekete</option>
            <option value="white">Fehér</option>
            <option value="yellow">Sárga</option>
            <option value="orange">Narancssárga</option>
            <option value="purple">Lila</option>
        </select>
       
        <br />
        <form asp-action="Create" id="falForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <canvas id="canvas" width="800" height="600"></canvas>
                <label asp-for="kep" class="control-label"></label>
                <input asp-for="kep" class="form-control" id="imageUrl" type="hidden"/>
                <span asp-validation-for="kep" class="text-danger"></span>
                <input type="file" id="imageLoader"  accept="image/*"/>
                
                

          

            </div>
            <div class="form-group">
                <label asp-for="nehezseg" class="control-label"></label>
                <input asp-for="nehezseg" class="form-control" />
                <span asp-validation-for="nehezseg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nev" class="control-label"></label>
                <input asp-for="nev" class="form-control" />
                <span asp-validation-for="nev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="leiras" class="control-label"></label>
                <textarea asp-for="leiras" class="form-control" ></textarea>
                <span asp-validation-for="leiras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="letrehozva" class="control-label"></label>
                <input asp-for="letrehozva" class="form-control" type="date"/>
                <span asp-validation-for="letrehozva" class="text-danger"></span>
            </div>
            <div class="form-group">
               <!-- <label asp-for="FalID" class="control-label"></label>-->
                <!--<select asp-for="FalID" class ="form-control" asp-items="ViewBag.FalID"></select>-->
                <!--<input type="hidden" asp-for="FalID" value="@ViewData["FalID"]" />-->
                @if (ViewBag.FalId == null)
                {
                    <div class="form-group">
                        <label>Fal</label>
                        <select asp-for="FalID" asp-items="@ViewData[" FalID"] as SelectList" class="form-control"></select>
                    </div>
                }
                else
                {
                    <input type="hidden" name="falId" value="@ViewBag.FalId" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary" formmethod="post"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Utak" asp-action="Index" asp-route-falId="@ViewBag.FalId" class="btn btn-secondary">Vissza az utakhoz</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // globális változók
        let canvas;
        let stateStack = [];
        let redoStack = [];
        let isRestoringState = false;

        // globális fügvények

        function loadState(state) {
            isRestoringState = true;
            canvas.loadFromJSON(state, () => {
                canvas.renderAll();
                isRestoringState = false;
            });
        }

        function saveState() {
            if (isRestoringState || !canvas) return;
            const json = JSON.stringify(canvas.toJSON());
            stateStack.push(json);
            redoStack = [];
        }

        function undo() {
            if (!canvas) return;
            if (stateStack.length > 1) {
                redoStack.push(stateStack.pop());
                const previousState = stateStack[stateStack.length - 1];
                loadState(previousState);
            } else if (stateStack.length === 1) {
                redoStack.push(stateStack.pop());
                canvas.clear();
                canvas.setBackgroundImage(null, canvas.renderAll.bind(canvas));
            }
        }

        function redo() {
            if (!canvas) return;
            if (redoStack.length > 0) {
                const nextState = redoStack.pop();
                stateStack.push(nextState);
                loadState(nextState);
            }
        }

        // DOMContentLoaded eseménykezelő 

        document.addEventListener("DOMContentLoaded", () => {
            canvas = new fabric.Canvas('canvas');

            function saveImage() {
                return new Promise((resolve, reject) => {
                    const dataURL = canvas.toDataURL("image/png");

                    fetch('/api/feltoltes/saveimage', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ imageData: dataURL })
                    })
                        .then(async response => {
                            if (!response.ok) {
                                const text = await response.text();
                                throw new Error(text);
                            }
                            return response.json();
                        })
                        .then(data => {
                            document.getElementById("imageUrl").value = data.url;
                            resolve();
                        })
                        .catch(err => {
                            alert("Hiba történt a kép mentésekor:\n" + err.message);
                            reject(err);
                        });
                });
            }

            // Rajzolás után állapot mentése
            canvas.on('path:created', function () {
                saveState();
            });

            // Kép betöltése
            document.getElementById('imageLoader').addEventListener('change', function (e) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    fabric.Image.fromURL(event.target.result, function (img) {
                        canvas.clear();
                        stateStack = [];
                        redoStack = [];
                        const ratioX = canvas.width/img.width;
                const ratioY = canvas.height/img.height;

                const ratio = Math.min(ratioX, ratioY);
                canvas.setBackgroundImage(img, canvas.renderAll.bind(canvas), {
                    scaleX: ratio,
                    scaleY: ratio,

                    originX: 'center',
                    originY: 'center',
                    top: canvas.height/2,
                    left: canvas.width/2
                        });
                        saveState();
                    }, { crossOrigin: 'anonymous' });
                };
                reader.readAsDataURL(e.target.files[0]);
            });

            // Szín kiválasztása
            let currentColor = 'red';
            document.getElementById('colorPicker').addEventListener('change', function (e) {
                currentColor = e.target.value;
                canvas.freeDrawingBrush.color = currentColor;
            });

            // Rajzolás bekapcsolása
            canvas.isDrawingMode = true;
            canvas.freeDrawingBrush = new fabric.PencilBrush(canvas);
            canvas.freeDrawingBrush.width = 5;
            canvas.freeDrawingBrush.color = currentColor;

            // Kezdő állapot mentése
            saveState();

            // Form elküldés
            document.getElementById("falForm").addEventListener("submit", async function (event) {
                event.preventDefault();
                try {
                    if (stateStack.length > 1 || canvas.backgroundImage) {
                        await saveImage();
                    }
                    this.submit();
                } catch (err) {
                    console.error("Mentés megszakítva:", err);
                }
            });
        });
    </script>
}
