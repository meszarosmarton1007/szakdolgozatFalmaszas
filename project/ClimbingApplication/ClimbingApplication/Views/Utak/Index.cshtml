@model IEnumerable<ClimbingApplication.Models.Utak>
@{

    ViewData["Title"] = "Index";
    var falId = ViewData["FalID"];


}
<h2>

    Utak a @ViewBag.falNev falon a @ViewBag.FalmaszohelyNev teremben


</h2>


    <p>
    <a asp-controller="Falak" asp-action="Index" asp-route-falmaszohelyId="@ViewBag.FalmaszohelyId" class="btn btn-secondary">Vissza a falakhoz</a>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
    <a asp-controller="Utak" asp-action="Create" asp-route-falId="@falId" class="btn btn-primary">Új út létrehozása</a>
    }
    </p>



<div class="row justify-content-center">
    <div>
@foreach (var item in Model) {
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h3>@Html.DisplayFor(modelItem => item.nev)</h3>
                <div class="row mt-3">
                    <div class="col-md-5">
                            <a href="#modal-@item.ID" data-bs-toggle="modal">
                                <img src="@Html.DisplayFor(modelItem => item.kep)"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height: 300px; width: 100%; height: auto; display: block; cursor: pointer;" />
                            </a>
                    </div>

                    <div class="col-md-7">
                        <dl class="row">
                            <dt class="colsm-5">
                                Nehézség
                            </dt>
                            <dd class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.nehezseg)
                            </dd>
                                <dt class="colsm-5">
                                    Létrehozás napja
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.letrehozva)
                                </dd>
                                <dt class="colsm-5">
                                    Létrehozó
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.UtLetrehozo.felhasznaloNev)
                                </dd>
                                <dt class="colsm-5">
                                    Leírás
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(modelItem => item.leiras)
                                </dd>
                        </dl>
                        <div class="mt-3">
                                <div class="btn-group">
                                    <a asp-controller="Utak" asp-action="Details" asp-route-id="@item.ID" asp-route-falId="@ViewBag.FalId" class="btn btn-info">Részletek</a>



                                    @if (User.Identity.IsAuthenticated && (item.FelhasznaloID == int.Parse(User.FindFirstValue("UserId")) || User.IsInRole("admin")))
                                    {
                                        <a asp-controller="Utak" asp-action="Edit" asp-route-id="@item.ID" asp-route-falId="@ViewBag.FalId" class="btn btn-warning">Szerkesztés</a>
                                        <a asp-controller="Utak" asp-action="Delete" asp-route-id="@item.ID" asp-route-falId="@ViewBag.FalId" class="btn btn-danger">Törlés</a>
                                    }
                                </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 border-top pt-3">
                        <h5>Hosszászólások</h5>
                        <div>
                            @if (item.Hozzaszolasoks != null && item.Hozzaszolasoks.Any())
                            {
                                foreach (var hozzaszolas in item.Hozzaszolasoks)
                                {

                                    <div class="border p-2 my-2">
                                        <strong> @hozzaszolas.UtHozzaszolo?.felhasznaloNev</strong>
                                        <p>@hozzaszolas.hozzaszolas</p>

                                        @if (User.Identity.IsAuthenticated &&
                                       (hozzaszolas.FelhasznaloID == int.Parse(User.FindFirstValue("UserId")) || User.IsInRole("admin")))
                                        {

                                            <!-- Szeksztés itt-->
                                            <form asp-controller="Hozzaszolasok" asp-action="myEdit" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@hozzaszolas.ID" />
                                                <input type="text" name="hozzaszolas" value="@hozzaszolas.hozzaszolas" class="form-control d-inline w-50" />
                                                <button type="submit" class="btn btn-sm btn-warning">Mentés</button>
                                            </form>

                                            <!--Törlés itt-->
                                            <form asp-controller="Hozzaszolasok" asp-action="myDelete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@hozzaszolas.ID" />
                                                <button type="submit" class="btn btn-sm btn-danger">Törlés</button>
                                            </form>
                                        }

                                        <!--Válaszok itt lesznek-->
                                        @if (hozzaszolas.Valaszok != null && hozzaszolas.Valaszok.Any())
                                        {
                                            <div class="ms-4">
                                                @foreach (var valaszok in hozzaszolas.Valaszok)
                                                {
                                                    <div class="border-start ps-2 my-1">
                                                        <strong>@valaszok.Valasziro?.felhasznaloNev</strong>
                                                        <p>@valaszok.valasz</p>
                                                    </div>

                                                    @if (User.Identity.IsAuthenticated && (valaszok.FelhasznaloID == int.Parse(User.FindFirstValue("UserId")) || User.IsInRole("admin")))
                                                    {
                                                        <!--Szekeszési rész-->
                                                        <form asp-controller="Valaszok" asp-action="myEdit" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@valaszok.ID" />
                                                            <input type="text" name="valasz" value="@valaszok.valasz" class=" form-control d-inline w-50" />
                                                            <button type="submit" class="btn btn-sm btn-warning">Mentés</button>
                                                        </form>

                                                        <!--Törlési rész-->
                                                        <form asp-controller="Valaszok" asp-action="myDelete" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@valaszok.ID" />
                                                            <button type="submit" class="btn btn-sm btn-danger">Törlés</button>
                                                        </form>
                                                    }

                                                }
                                            </div>
                                        }
                                        <!--Új válasz írása-->
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <form asp-controller="Valaszok" asp-action="myCreate" method="post" class="ms-4 mt-2">
                                                <input type="hidden" name="hozzaszolasId" value="@hozzaszolas.ID" />
                                                <textarea name="valasz" class="form-control" placeholder="Valasz helye"></textarea>
                                                <button type="submit" class="btn btn-primary mt-1">Valasz</button>
                                            </form>
                                        }


                                    </div>
                                }
                            }
                            else
                            {
                                <li>Nincsenek még hozzászólások</li>
                            }

                            <!--Új hozzászólás írása-->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="Hozzaszolasok" asp-action="myCreate" method="post" class="mt-3">
                                    <input type="hidden" name="utakId" value="@item.ID" />
                                    <textarea name="hozzaszolas" class="form-control" placeholder="Hozzászólás helye"></textarea>
                                    <button type="submit" class="btn btn-success mt-1">Hozzászólás</button>
                                </form>
                            }
                        </div>
                </div>
            </div>          
        </div>
            @*--Molal ablak kódja--*@
            <div class="modal" id="modal-@item.ID" tabindex="-1" aria-labelledby="imageModalLabel-@item.ID" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content bg-transparent border-0">
                        <div class="modal-header border-0 p-3" style="position: absolute; top: 0; right: 0; z-index: 1056;">
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" style="filter: drop-shadow(0 0 5px rgba(0,0,0,0.8));"></button>
                        </div>
                        <div class="modal-body p-0">
                            <img src="@Html.DisplayFor(modelItem => item.kep)"
                                 class="img-fluid"
                                 style="height: auto; max-height:90vh; object-fit: contain; width:100%" />
                        </div>
                    </div>
                </div>
            </div>
            @*--Model ablak kód vége--*@
}
    </div>
</div>
