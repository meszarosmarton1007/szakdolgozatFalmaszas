@model ClimbingApplication.Models.Falak

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Biztos, hogy törölni szeretné</h3>
<div>
    <h4>Falak</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nev)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nev)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kep)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.letrehozva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.letrehozva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Falhelye)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Falhelye.cim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Letrehozo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Letrehozo.felhasznaloNev)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" id="image-Url" value="@Model.kep" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> 
        <a asp-action="Index" asp-route-falmaszohelyId="@Model.FalmaszohelyID" class="btn btn-secondary">Vissza a falakhoz</a>
    </form>
</div>

@section Scripts{
    <script>
        const form = document.getElementById('deleteForm');
        const imageUrlInput = document.getElementById('image-Url');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const imageUrl = imageUrlInput.value;

            const url = new URL(imageUrl);
            const path = url.pathname;

            const fileName = decodeURIComponent(path.split('/').pop().split('?')[0]);

            try {
                const response = await fetch(`/api/Feltoltes/deleteimage?fileName=${fileName}`, {
                    method: 'delete'
                });

                if (response.ok) {
                    console.log("Kép sikeresen törölve");
                    e.target.submit();
                } else {
                    const error = await response.text();
                    console.error("Hiba a kép törlésekor: ", error);
                    alert("Hiba a kép törlésekor");
                }

            } catch (error) {
                console.error("Váratlan hiba: ", error);
                alert("Váratlan hiba");
            }
        });
    </script>
}
