@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<h2>Kép feltöltés és Firebase mentés</h2>

<input type="file" id="imageLoader" accept="image/*" />
<button onclick="saveImage()">Mentés Firebase-be</button>
<br><br>
<canvas id="canvas" width="800" height="600" style="border:1px solid #ccc;"></canvas>
<br />
<div id="result"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.0/fabric.min.js"></script>
<script>
    const canvas = new fabric.Canvas('canvas');
    canvas.isDrawingMode = false;

    document.getElementById('imageLoader').addEventListener('change', function (e) {
        const file = e.target.files[0];
        if (!file || !file.type.startsWith('image/')) {
            alert('Csak kép tölthető fel!');
            return;
        }

        const reader = new FileReader();
        reader.onload = function (event) {
            fabric.Image.fromURL(event.target.result, function (img) {
                canvas.clear();

                const canvasWidth = canvas.getWidth();
                const canvasHeight = canvas.getHeight();
                const scale = Math.min(canvasWidth / img.width, canvasHeight / img.height);

                img.scale(scale);
                img.set({
                    left: (canvasWidth - img.width * scale) / 2,
                    top: (canvasHeight - img.height * scale) / 2,
                    selectable: false,
                    evented: false
                });

                canvas.add(img);
                canvas.renderAll();
            });
        };
        reader.readAsDataURL(file);
    });

    function saveImage() {
        const dataURL = canvas.toDataURL("image/png");

        fetch('/api/feltoltes', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ imageData: dataURL })
        })
            .then(async response => {
                if (!response.ok) {
                    // Válasz nem OK – olvassuk szövegként (pl. "Hiba: ...")
                    const text = await response.text();
                    throw new Error(text);
                }
                // Válasz rendben van, olvassuk JSON-ként
                return response.json();
            })
            .then(data => {
                // Siker – megjelenítjük az URL-t
                document.getElementById("imageUrlBox").value = data.url;
                alert("Kép sikeresen feltöltve!");
            })
            .catch(err => {
                alert("Hiba történt a kép mentésekor:\n" + err.message);
            });
    }
</script>
